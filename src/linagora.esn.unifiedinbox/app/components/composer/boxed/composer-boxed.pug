inbox-composer(
  inbox-composer-boxed,
  template="composer-desktop.html",
  message="email",
  on-hide="$hide()",
  on-show="$show()",
  on-sending="onSending()",
  on-send="onSend()",
  on-fail="onFail()"
  on-discard="onDiscard()",
  on-discarding="onDiscarding(reopenDraft)",
  on-message-id-update="$setId($id)",
  on-title-update="$updateTitle($title)",
  on-try-close='$onTryClose(callback)',
  force-close='$forceClose()'
)
